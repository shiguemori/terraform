resource "aws_security_group" "trabalho-sg" {
  vpc_id      = "${data.aws_vpc.vpc.id}"
  name        = "${terraform.workspace}-trabalho-sg"

  egress {
    from_port   = 0
    to_port     = 0
    protocol    = "-1"
    cidr_blocks = ["0.0.0.0/0"]
  }

  ingress {
    from_port   = 22
    to_port     = 22
    protocol    = "tcp"
    cidr_blocks = ["0.0.0.0/0"]
  }
  ingress {
    from_port   = 80
    to_port     = 80
    protocol    = "tcp"
    cidr_blocks = ["0.0.0.0/0"]
  }

  
  tags = {
    Name = "${terraform.workspace}-trabalho-sg"
  }
}
